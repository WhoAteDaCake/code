{
	"version": "0.2.0",
	"configurations": [{
		"name": "C++ Launch",
		"type": "cppdbg",
		"request": "launch",
		"preLaunchTask": "build",
		"cwd": "${workspaceRoot}",
		"program": "${workspaceRoot}/Debug/program.exe",
		"stopAtEntry": false,
		"launchCompleteCommand": "exec-run",
		"linux": {
			"MIMode": "gdb",
			"miDebuggerPath": "/usr/bin/gdb",
			"setupCommands": [

				{
					"text": "-enable-pretty-printing",
					"description": "enable pretty printing",
					"ignoreFailures": true
				},

				{
					"text": "handle SIGPIPE nostop noprint pass",
					"description": "ignore SIGPIPE",
					"ignoreFailures": true
				}
			]
		}
	}]
}